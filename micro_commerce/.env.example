# Environment Variables Template
# Copy this file to .env and fill in your actual values
# Never commit .env file to version control

# ===========================================
# STRIPE PAYMENT CONFIGURATION
# ===========================================
# Get these from: https://dashboard.stripe.com/apikeys
STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key_here
STRIPE_SECRET_KEY=sk_test_your_secret_key_here

# Stripe Merchant Info
STRIPE_MERCHANT_IDENTIFIER=merchant.com.yourapp.app
STRIPE_MERCHANT_COUNTRY_CODE=US
STRIPE_MERCHANT_DISPLAY_NAME=Your App Name

# ===========================================
# FIREBASE CONFIGURATION
# ===========================================
# Firebase project keys (if using Firebase Auth/Firestore)
FIREBASE_API_KEY=your_firebase_api_key_here
FIREBASE_PROJECT_ID=your_project_id_here
FIREBASE_MESSAGING_SENDER_ID=your_sender_id_here
FIREBASE_APP_ID=your_app_id_here

# ===========================================
# OTHER API KEYS
# ===========================================
# Add other API keys here as needed
# GOOGLE_MAPS_API_KEY=your_google_maps_key_here
# FACEBOOK_APP_ID=your_facebook_app_id_here
# TWITTER_API_KEY=your_twitter_api_key_here
# ANALYTICS_KEY=your_analytics_key_here

# ===========================================
# FIREBASE CONFIGURATION
# ===========================================
# Get these from: https://console.firebase.google.com/project/your-project/settings/general
FIREBASE_API_KEY=your_firebase_api_key_here
FIREBASE_APP_ID_WEB=your_web_app_id_here
FIREBASE_APP_ID_ANDROID=your_android_app_id_here
FIREBASE_APP_ID_IOS=your_ios_app_id_here
FIREBASE_APP_ID_MACOS=your_macos_app_id_here
FIREBASE_MESSAGING_SENDER_ID=your_messaging_sender_id_here
FIREBASE_PROJECT_ID=your_project_id_here
FIREBASE_AUTH_DOMAIN=your_auth_domain_here
FIREBASE_STORAGE_BUCKET=your_storage_bucket_here
FIREBASE_MEASUREMENT_ID=your_measurement_id_here
FIREBASE_IOS_BUNDLE_ID=your_ios_bundle_id_here

# ===========================================
# APP CONFIGURATION
# ===========================================
# Environment (development, staging, production)
APP_ENV=development
APP_DEBUG=true
API_BASE_URL=https://api.yourapp.com